<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shetuan"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"  >
    <RelativeLayout
        android:id="@+id/shetuan_1"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#49c4d6"
        >
        <ImageView
            android:id="@+id/school"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:gravity="center"           
            android:layout_marginLeft="10dp"
            android:background="@drawable/school"/>
        <ImageView
            android:id="@+id/title_shetuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:paddingLeft="160.0dip"
            android:paddingRight="150.0dip"
            android:singleLine="true"
            android:src="@drawable/shetuan"/>
        <ImageView
            android:id="@+id/shetuan_search_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="0"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:gravity="center"           
            android:layout_marginRight="15dp"
            android:background="@drawable/find"
            />
    </RelativeLayout>
    <RelativeLayout 
	android:id="@+id/main_search_title_clock"
	android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:visibility="gone"
    android:background="#49c4d6">
		<ImageView 
		    android:id="@+id/main_search_title_clock_back"
		    android:layout_width="14dp"
		    android:layout_height="25dp"
		    android:layout_marginLeft="20dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/zuo"/>
		<AutoCompleteTextView
		    android:id="@+id/shetuantitle_bar_name_text"
	        android:layout_width="match_parent"
	        android:layout_height="34dp"
	        android:layout_centerInParent="true"
	        android:layout_centerVertical="true"
	        android:ellipsize="end"
	        android:paddingLeft="35dp"
	        android:layout_marginLeft="100dp"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/roundsearch"
	        android:singleLine="true"
	        android:hint="点击这里搜索社团"
	        android:textColor="#c0c0c0"
	        android:textStyle="bold"
	        android:textSize="16sp" />
		<TextView 
		    android:id="@+id/shetuantitle_bar_sousuo"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:text="搜索"
		    android:gravity="center"
		    android:textColor="#ffffff"
		    android:layout_marginRight="8dp"
		    android:layout_alignParentRight="true"
		    android:textSize="19sp"
		    android:layout_centerVertical="true"/>
	</RelativeLayout>
    <FrameLayout
	     android:layout_width="fill_parent"
         android:layout_height="180dip"
         android:orientation="vertical"> 
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>
    <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" 
        android:orientation="vertical" >  
        <LinearLayout  
            android:id="@+id/viewGroup2"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:layout_marginTop="165dp"
            android:gravity="center_horizontal"  
            android:orientation="horizontal">  
        </LinearLayout>  
    </LinearLayout>  
</FrameLayout>
    <LinearLayout
        android:id="@+id/shetuan_button"
        android:layout_width="fill_parent"
        android:layout_height="92dp"
        android:background="#F8F8FF"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/shetuan_button_1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
             android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/tiyu_image"
                android:layout_marginTop="5dp"
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:background="@drawable/tiyu"
                />
            <TextView
                android:id="@+id/tiyu"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="体育竞技"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shetuan_button_2"
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/wenhua_image"
                android:layout_marginTop="5dp"
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:background="@drawable/wenhua"
                />
            <TextView
                android:id="@+id/wenhua"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                 android:layout_gravity="center_horizontal"
                android:text="文化艺术"
                android:textSize="12sp"
                />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/shetuan_button_3"
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/xueshu_image"
                android:layout_marginTop="5dp"
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:background="@drawable/xueshu"
                />
            <TextView
                android:id="@+id/xueshu"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="学术研究"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shetuan_button_4"
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/aixin_image"
                android:layout_marginTop="5dp"
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:background="@drawable/aixin"
                />
            <TextView
                android:id="@+id/aixin"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="爱心公益"
                android:textSize="12sp"
                />
        </LinearLayout>
      </LinearLayout>
        <LinearLayout 
            android:id="@+id/fenlei"
            android:layout_height="35dp"
            android:background="#F8F8FF"
            android:layout_width="fill_parent">
          <TextView 
          android:id="@+id/xiangxi"
          android:layout_height="25dp"
          android:layout_width="fill_parent"
          android:text="详细分类  :"
          android:textSize="18dp"/>
          </LinearLayout>
          <ListView
                android:id="@+id/shetuan_listview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FFFFFF"
                android:divider="@color/blue2"
                android:dividerHeight="1px" 
                android:orientation="vertical" >
         </ListView>
</LinearLayout>
