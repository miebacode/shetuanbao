<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout
        android:id="@+id/guanlihuodong_title"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12"> 
        <TextView 
            android:id="@+id/huodongguanli_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.6"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:text="@string/more_back"
            android:textSize="16sp"
            />              
            <TextView 
            android:id="@+id/guanlihuodong_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="管理活动"
            android:layout_marginLeft="38dp"
            android:textSize="20sp"
            />     
            
            <TextView
                android:id="@+id/huodongtianjia_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="添加"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	
        <ListView
            android:id="@+id/huodong_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:divider="@color/blue2"
            android:dividerHeight="1px" 
            android:orientation="vertical" >
        </ListView>
     </LinearLayout>
     
     
</LinearLayout>
