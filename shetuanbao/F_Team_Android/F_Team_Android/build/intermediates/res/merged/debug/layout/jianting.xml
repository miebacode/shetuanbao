<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
    <!-- 退出应用的背景图 -->
    <ImageView
        android:id="@+id/exitGameBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/tuichubeijing"/>
    <!-- 确认按钮 -->
    <!-- 取消按钮 -->

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_ok"
        android:layout_marginRight="24dp"
        android:background="@drawable/quxiao3" />

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/exitGameBackground"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/queding3" />

</RelativeLayout>