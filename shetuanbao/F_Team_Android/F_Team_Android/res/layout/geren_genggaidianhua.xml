<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/updatetool"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12"> 
        <TextView 
            android:id="@+id/updatetool_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.6"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:text="@string/more_back"
            android:textSize="16sp"/>              
            <TextView 
            android:id="@+id/updatetool_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="更改预留电话"
            android:textSize="20sp"/>      
                                                    
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/update_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
             <TextView 
                android:id="@+id/update_main_text1"
                android:layout_width="match_parent"
            	android:layout_height="30dp"
            	android:layout_marginTop="15dp"
            	android:text="旧电话号："
            	android:textColor="#666666"
            	android:gravity="bottom"/>
             <EditText 
                android:id="@+id/update_main_password1_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"       
                android:inputType="textPassword"
                android:hint="请输入您的电话号码"                
                android:padding="10dp"
                android:textColor="#666666"
                android:textSize="14sp" 
                android:background="@drawable/roundshape"
                android:singleLine="true"
                />
             <TextView 
                android:id="@+id/update_main_text2"
                android:layout_width="match_parent"
            	android:layout_height="30dp"
            	android:textColor="#666666"
            	android:text="新电话号："
            	android:gravity="bottom"/>
              <EditText 
                android:id="@+id/update_main_password2_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"      
                android:inputType="textPassword"
                android:hint="请输入您的电话号码"                
                android:padding="10dp"
                android:textColor="#666666"
                android:textSize="14sp" 
                android:background="@drawable/roundshape"
               
                />
              
              <Button 
		        android:text="确定"
		        android:textSize="20sp"
		        android:id="@+id/update_main_ok" 
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginTop="20dp"
		        android:textColor="#ffffff"
		        android:background="@drawable/buttonloginclock">
		      </Button>
        </LinearLayout>

</LinearLayout>