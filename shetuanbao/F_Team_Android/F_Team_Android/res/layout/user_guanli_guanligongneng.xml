<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/guanliyuan"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12"> 
        <TextView 
            android:id="@+id/guanliyuan_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.6"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:text="@string/more_back"
            android:textSize="16sp"
            />              
            <TextView 
            android:id="@+id/guanli_l_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="管理"
            android:layout_marginLeft="11dp"
            android:textSize="20sp"
            />      
                                                    
        </LinearLayout>
        
     <LinearLayout 
            android:id="@+id/guanliyuan_Lineraout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"         
            android:orientation="vertical"
           >
            
          <TextView
              android:id="@+id/guanli_tianjiachengyuan"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/gengduo_beijingtiao"
              android:layout_margin="0.5dp"
              android:layout_weight="1"
              android:gravity="left|center_vertical"
              android:padding="11dp"
              android:text="管理成员"
              
