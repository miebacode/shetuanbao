<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <RelativeLayout
        android:id="@+id/historytool"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12">              
            <ImageView 
            android:id="@+id/historytool_text2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/gerenzhongxin"/>

            <TextView
                android:id="@+id/historytool_text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:layout_weight="0.6"
                android:text="@string/more_back"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/historytool_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_weight="0.6"
                android:textColor="#ffffff"
                android:textSize="16sp" />
                                                    
      </RelativeLayout>
     <RelativeLayout 
         android:id="@+id/historymain"
         android:layout_width="match_parent"
    	 android:layout_height="match_parent"
    	 android:background="#ffffff">
         
         <android.support.v4.view.ViewPager
         android:id="@+id/historymain_pager"
         android:layout_marginTop="4dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/historymain_tool">
   		 </android.support.v4.view.ViewPager>
         
     </RelativeLayout>
     

</LinearLayout>