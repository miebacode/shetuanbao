<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shetuan_fen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/shetuan_tool"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12">              
            <ImageView 
            android:id="@+id/shetuan_tool_text2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/shetuanxiangqing"/>
            <TextView
                android:id="@+id/shetuan_tool_text1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_weight="0.6"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />
      </RelativeLayout>
      <com.bn.util.ObservableScrollView
          android:id="@+id/gundong"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
            <FrameLayout
	     android:layout_width="fill_parent"
         android:layout_height="180dip"
         android:orientation="vertical"> 
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>
    <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" 
        android:orientation="vertical" >  
  
        <LinearLayout  
            android:id="@+id/viewGroup3"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:layout_marginTop="165dp"
            android:gravity="center_horizontal"  
            android:orientation="horizontal">  
        </LinearLayout>  
    </LinearLayout>  
</FrameLayout>
   
              <LinearLayout
              android:id="@+id/shetuan_name"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:orientation="horizontal"
              android:gravity="center"
              android:background="@drawable/wodexiaoyuan02">
              <TextView
                    android:id="@+id/shetuan_name_1"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="3dp"                            
                    android:padding="10dp"
                    android:text="社团名称"
                    android:background="#EEEED1"
                    android:textColor="#3366cc"
                    android:textSize="20sp"  />
              <TextView
                  android:id="@+id/shetuan_name_2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/touming"
                  android:text="迎新晚会"
                  android:padding="10dp"
                  android:singleLine="true"
                  android:textColor="#666666"
                  android:textSize="17sp" >
                </TextView>
                 </LinearLayout> 
              
              <LinearLayout
                  android:id="@+id/shetuan_kouhao"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:gravity="center"
                  android:orientation="horizontal">
                  <TextView
                      android:id="@+id/huongdong_kouhao_1"
                      android:layout_width="110dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="3dp"                            
                      android:padding="10dp"
                      android:text="社团口号"
                      android:background="#EEEED1"
                      android:textColor="#3366cc"
                      android:textSize="20sp"  />
                  <TextView
                      android:id="@+id/shetuan_kouhao_2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="3dp"
                      android:padding="10dp"
                      android:text="2016年5月1日"
                      android:textColor="#666666"
                      android:textSize="14sp" />
                 
              </LinearLayout>
           <LinearLayout
           android:id="@+id/shetuan_people"
 	       android:layout_width="match_parent"
           android:layout_height="45dp"
           android:orientation="horizontal"
           android:gravity="center"
           android:background="@drawable/gengduo_beijingtiao1">

               <TextView
                   android:id="@+id/shetuan_people_1"
                   android:layout_width="110dp"
                   android:layout_height="43dp"
                   android:layout_marginLeft="3dp"
                   android:background="#EEEED1"
                   android:padding="10dp"
                   android:text="社团成员"
                   android:textColor="#3366cc"
                   android:textSize="20sp" />
 
                 <TextView
                  android:id="@+id/shetuan_people_2"
                  android:layout_width="225dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:singleLine="true"
                  android:text="校礼堂"
                  android:textColor="#666666"
                  android:textSize="14sp" />
                 <ImageView
                     android:id="@+id/go_shetuan_user"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_alignParentRight="true"
		      android:layout_centerVertical="true"
		      android:src="@drawable/go"/>
 	             </LinearLayout> 
 	     <LinearLayout
 	         android:id="@+id/shetuan_detail"
 	         android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@drawable/gengduo_beijingtiao1"
             >
             <TextView
                 android:id="@+id/shetuan_detail_1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="3dp"                            
                 android:padding="10dp"
                 android:layout_gravity="center"
                 android:text="社团介绍"
                 android:textColor="#3366cc"
                 android:textSize="18sp"/>
