<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
      
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="PicCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/de_pic_chebox_photo</item>

        <item name="android:paddingLeft">2.0dip</item>

        <item name="android:maxHeight">10.0dip</item>

    </style>
     <style name="StartDisCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/rp_startdis_checkbox</item>

        <item name="android:paddingLeft">2.0dip</item>

        <item name="android:maxHeight">10.0dip</item>

    </style>
    
     
     <style name="DemoTextStyleBig1">
        <item name="android:textSize">18sp</item>
    </style>
     <style name="DemoTextStyleMiddle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/group_list_gray</item>
    </style>
    <style name="AppStart" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
     
     

</resources>
