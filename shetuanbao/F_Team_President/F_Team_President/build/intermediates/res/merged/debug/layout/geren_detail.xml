<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/geren_detail"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12">              
            <ImageView 
            android:id="@+id/geren_fanhui"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            />

            <TextView
                android:id="@+id/geren_fanhui_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:layout_weight="0.6"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <TextView
            android:id="@+id/geren_biaoti"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="135dp"
            android:layout_weight="1"
            android:text="个人详情"
            android:textSize="20sp"/>
              <TextView
                android:id="@+id/geren_baocun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_weight="0.6"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="16sp" />                                       
      </RelativeLayout>
      
           
      <LinearLayout 
          android:id="@+id/geren_zong"
          android:layout_width="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
       
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/roundshape">
         
          <LinearLayout 
           android:id="@+id/geren_id"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:background="@drawable/wodexiaoyuan02"
           >
           <TextView
                    android:id="@+id/geren_id_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"                            
                    android:padding="10dp"
                    android:text="账号:"
                    android:textColor="#666666"
                    android:textSize="14sp"  
                    android:textStyle="bold"
               />

           <EditText
               android:id="@+id/geren_id_3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/touming"
               android:padding="10dp"
               android:singleLine="true"
               android:textColor="#666666"
               android:textSize="14sp" 
               android:editable="false" >
          </EditText>
      </LinearLayout>
           <LinearLayout 
           android:id="@+id/geren_name"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:background="@drawable/wodexiaoyuan02"
           >
           <TextView
                    android:id="@+id/geren_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"                            
                    android:padding="10dp"
                    android:text="姓名:"
                    android:textColor="#666666"
                    android:textSize="14sp"  
                    android:textStyle="bold"
               />
           <EditText
               android:id="@+id/geren_name_3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/touming"
               
               android:padding="10dp"
               android:singleLine="true"
               android:textColor="#666666"
               android:textSize="14sp" 
               
               android:editable="false" >

          </EditText>
      </LinearLayout>
      
          <LinearLayout 
           android:id="@+id/geren_mima"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
          android:background="@drawable/wodexiaoyuan02"
           >
            <TextView
                    android:id="@+id/geren_mima_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="3dp"                          
                    android:padding="10dp"
                    android:text="密码:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" 
               />
            <EditText 
                android:id="@+id/geren_mima_3"
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/touming"
               android:padding="10dp"
               android:singleLine="true"
               android:textColor="#666666"
               android:textSize="14sp" 
               >
             </EditText>
       </LinearLayout>
       
      
      </LinearLayout>
      
      <Button 
        android:text="封号"
        android:textSize="20sp"
        android:id="@+id/fengjin" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttonloginclock">
      </Button>
       <Button 
        android:text="解除封号"
        android:textSize="20sp"
        android:id="@+id/jiefeng" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttonloginclock">
      </Button>
        <RelativeLayout
	    android:id="@+id/weizhaodao"
	    android:visibility="gone"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">

		<ImageView
		    android:id="@+id/weizhaodao_image"
		    android:layout_width="150dp"
		    android:layout_height="150dp"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="71dp"
		    android:background="@drawable/ku" />

		<TextView
		    android:id="@+id/weizhodao_text"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/nodate_image"
		    android:layout_alignParentLeft="true"
		    android:gravity="center"
		    android:text="搜索的用户不存在!!!"
		    android:textColor="#FF8C00" 
		    android:textSize="20dp"/>
	</RelativeLayout>		
</LinearLayout>