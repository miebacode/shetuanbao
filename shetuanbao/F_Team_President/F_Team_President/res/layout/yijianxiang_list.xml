<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yijianxiang"
    android:layout_width="fill_parent"
    android:layout_height="120dp" 
    android:orientation="horizontal"
    android:gravity="center_vertical|left">
	
    <LinearLayout
          android:id="@+id/yijianxiang_list_image"
          android:layout_width="100dp"
          android:layout_height="70dp"
          android:layout_marginLeft="3dp"
          android:gravity="center"
          android:orientation="vertical" >
		  <com.example.util.RoundImageView
	        android:id="@+id/yijianxiang_image"
	        android:layout_width="90dp"
	        android:layout_height="60dp">
		      
		  </com.example.util.RoundImageView>
     </LinearLayout>
    <LinearLayout
          android:id="@+id/yijianxiang_list_l"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
          android:layout_marginRight="11dp"
          android:orientation="vertical" >
		   <LinearLayout
          android:id="@+id/yijianxiang_list_l_1"
          android:layout_width="wrap_content"
          android:layout_height="27dp"
          android:layout_marginTop="2dp"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="vertical" >
		  <TextView
		        android:id="@+id/yijianxiang_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
				android:ellipsize="end"
				
				android:textColor="#3366cc"
		        android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:textSize="23sp"/>
           
         </LinearLayout>
		  <LinearLayout
          android:id="@+id/yijianxiang_list_l_3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:gravity="center_vertical|center_horizontal"
          android:orientation="horizontal" >
           <TextView
		        android:id="@+id/yijianxiang_detail"
				android:ellipsize="end"
		        android:layout_width="wrap_content"
		        android:textColor="#3366cc"
		        android:layout_marginRight="20dp"
		        android:layout_height="wrap_content"/>
         </LinearLayout>

   		 
   		  
           
     </LinearLayout>

    

 </LinearLayout>