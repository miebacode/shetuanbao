<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/geren_zhu"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gengduo_modifybiaoti12"> 
        <TextView 
            android:id="@+id/geren_zhu_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:text="返回"
            android:gravity="center_vertical"
            android:textSize="16sp"/>              
            <TextView 
            android:id="@+id/geren_zhu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="搜索账号"
            android:textSize="20sp"/>      
        </LinearLayout>
       <LinearLayout 
          android:id="@+id/geren_zong_zong"
          android:layout_width="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="15dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/roundshape">
         
          <LinearLayout 
           android:id="@+id/geren_id_zong"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:background="@drawable/wodexiaoyuan02"
           >
           <TextView
                    android:id="@+id/geren_id_2_zong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"                            
                    android:padding="10dp"
                    android:text="姓名:"
                    android:textColor="#666666"
                    android:textSize="14sp"  
                    android:textStyle="bold"
               />

           <AutoCompleteTextView
               android:id="@+id/geren_id_3_zong"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/touming"
               android:padding="10dp"
               android:singleLine="true"
               android:textColor="#000000"
               android:textSize="16sp" 
               >

          </AutoCompleteTextView>
      </LinearLayout>
           
      
          <LinearLayout 
           android:id="@+id/geren_mima_zong"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
          android:background="@drawable/wodexiaoyuan02"
           >
            <TextView
                    android:id="@+id/geren_mima_2_zong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="3dp"                          
                    android:padding="10dp"
                    android:text="所属社团:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" 
               />
           <Spinner 
               android:id="@+id/shetuan"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:spinnerMode="dialog"
               android:layout_weight="1"
               
               android:layout_marginLeft="6dp"
              />
       </LinearLayout>
      </LinearLayout>
       <Button 
        android:text="搜索"
        android:textSize="20sp"
        android:id="@+id/sousuo" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/buttonloginclock">
      </Button>
</LinearLayout>

